{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",

	"files": {
		"ignore": [
			"node_modules",
			"**/_![__tests__]",
			"dist",
			".wrangler",
			".vscode",
			"schemas/v1/postman.json"
		],
		"include": ["**/*[.js,.jsx,.ts,.tsx,.astro,.css,.json,.jsonc]"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"jsxQuoteStyle": "single"
		}
	},
	"json": {
		"parser": {
			"allowComments": true,
			"allowTrailingCommas": false
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			},
			"a11y": {
				"useMediaCaption": "off"
			},
			"nursery": {
				"useSortedClasses": "warn",
				"recommended": true
			},
			"correctness": { "useJsxKeyInIterable": "off" }
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"overrides": [
		{
			"include": ["./**/*.js"],
			"linter": {
				"enabled": false
			}
		},
		{
			"include": ["./**/*.tsx"],
			"formatter": {
				"indentWidth": 2,
				"indentStyle": "space",
				"formatWithErrors": true,
				"enabled": true,
				"lineWidth": 120,
				"attributePosition": "multiline"
			}
		}
	]
}
